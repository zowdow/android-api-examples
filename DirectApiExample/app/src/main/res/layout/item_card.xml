<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/card_root_view"
    card:cardBackgroundColor="@android:color/transparent"
    card:cardUseCompatPadding="true"
    card:cardCornerRadius="8dp"
    card:cardElevation="0dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <com.zowdow.direct_api.ui.views.CardImageView
            android:id="@+id/card_image_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:minWidth="170dp"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/distance_text_view"
            android:layout_alignEnd="@id/card_image_view"
            android:visibility="gone"
            android:background="@android:color/transparent"
            android:textSize="10sp"
            android:textColor="@color/embellishments_text"
            android:shadowColor="@color/embellishments_text_shadow"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>